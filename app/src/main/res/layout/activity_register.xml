<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gongdian.weian.activity.RegisterActivity"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="60dip"
            />

        <RelativeLayout
            android:id="@+id/layout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip" >

            <EditText
                android:id="@+id/uidText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:focusable="true"
                android:hint="请输入"
                android:singleLine="true"
                android:maxLength="18"
                android:paddingBottom="10dip"
                android:paddingLeft="100dp"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_password"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/uidText"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="身份证号"
                android:textColor="#353535"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/clear1"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/text_clear_icon"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/smsText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:hint="请输入验证码"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    android:maxLength="4"
                    android:paddingBottom="15dip"
                    android:textSize="18sp"
                    android:visibility="invisible"
                    android:layout_weight="2"
                    android:gravity="center">
                </EditText>
                <ImageButton
                    android:id="@+id/clear2"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="15dip"
                    android:background="@drawable/text_clear_icon"
                    android:visibility="invisible"/>

                <com.gongdian.weian.others.TimeButton
                    android:id="@+id/smsBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dip"
                    android:textSize="20sp"
                    android:visibility="invisible"
                    android:layout_weight="2"/>
            </LinearLayout>

            <Button
                android:id="@+id/checkBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue"
                android:layout_marginTop="10dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="20sp"

                />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="40dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blue"
                android:text="提交验证"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="invisible"
                />



        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
